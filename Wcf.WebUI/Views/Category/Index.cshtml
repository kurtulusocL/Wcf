@model IEnumerable<Wcf.Entities.Concrete.Category>
@{
    ViewBag.Title = "Category Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<p>
    <a href="~/Category/Create" class="btn btn-primary"> + Create New</a>   
</p>
<hr />
<div class="container">
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Products</th>
                    <th>Created Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>@item.Products.Count()</td>
                        <td>
                           @item.CreatedDate.ToShortDateString()
                        </td>
                        <td>
                            <a href="~/Category/Detail/@item.Id" class="btn btn-info btn-xs"><i class="glyphicon glyphicon-info-sign"></i> Detail</a>
                            <a href="~/Category/Edit/@item.Id" class="btn btn-success btn-xs"><i class="glyphicon glyphicon-pencil"></i> Edit</a>
                            <a href="~/Category/Delete/@item.Id" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-remove"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>